    "@jest/transform": "^27.5.1",
    "@types/babel__core": "^7.1.19",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.1.0",
    "jest": "^27.5.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^3.6.3",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.5.0",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.4",
    "typeorm": "0.2.44",
