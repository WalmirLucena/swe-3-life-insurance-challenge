{
  "name": "identity-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true yarn test:push --findRelatedTests",
      "git add ."
    ]
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "test": "jest --no-cache ----watchAll",
    "deploy:localhost": "export NODE_ENV=localhost && ts-node-dev --files -r tsconfig-paths/register --poll --respawn --transpile-only ./src/main/server",
    "typeorm": "export NODE_ENV=localhost && ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.ts",
    "migration:run": "export NODE_ENV=localhost && ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.ts migration:run",
    "start": "export NODE_ENV=localhost && ts-node-dev -r tsconfig-paths/register ./src/main/server",
    "build": "rimraf ./dist && tsc",
    "seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed",
    "dockerbuild": " docker-compose down && docker rmi -f $(docker images -aq) && docker-compose up"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "5.5.3",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^10.0.3",
    "@types/node": "^16.11.26",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "5.5.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
